                            </goals>
                            <phase>verify</phase>
                            <configuration>
                                <failOnErrors>false</failOnErrors>
                                <consoleOutput>true</consoleOutput>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </build>
    </profile>

